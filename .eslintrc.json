{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    // Prefer the TypeScript-aware rule and ignore any var/param/caught error that starts with an underscore
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
